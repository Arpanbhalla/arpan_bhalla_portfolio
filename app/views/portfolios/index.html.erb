<h1>Portfolio Items</h1>

<%= link_to 'Create new item', new_portfolio_path  %>

<% @portfolio_items.each do |portfolio| %>
  <p><%= link_to portfolio.title, portfolio_show_path(portfolio) %></p>
  <p><%= portfolio.subtitle %></p>
  <p><%= portfolio.body %></p>
  <%= image_tag(portfolio.thumb_image) unless portfolio.thumb_image.nil? %>
  <p><%= link_to'Edit portfolio', edit_portfolio_path(portfolio) %></p>
  <p><%= link_to'Delete portfolio', portfolio_path(portfolio), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <hr>
<% end %>